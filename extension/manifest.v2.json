{
  "manifest_version": 2,
  "name": "Watch Together Cookie Sync",
  "version": "1.0.0",
  "description": "Automatically sync cookies from YouTube, Twitch, and other sites to Watch Together",
  "permissions": [
    "cookies",
    "storage",
    "alarms",
    "tabs",
    "webRequest",
    "activeTab",
    "*://*.youtube.com/*",
    "*://*.twitch.tv/*",
    "*://*.vimeo.com/*",
    "*://*.dailymotion.com/*",
    "*://*.crunchyroll.com/*",
    "*://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
